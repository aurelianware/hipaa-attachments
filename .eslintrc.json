{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "**/*.test.ts",
    "**/*.js"
  ]
}
