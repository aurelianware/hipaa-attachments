{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aurelianware.com/schemas/Appeal-GetDetails-Request.json",
  "title": "Appeal Get Details Request",
  "description": "Request schema for retrieving appeal details and status",
  "type": "object",
  "required": [
    "appealId"
  ],
  "properties": {
    "appealId": {
      "type": "string",
      "description": "Unique identifier for the appeal",
      "pattern": "^APL-[A-Z0-9]{10,20}$"
    },
    "claimNumber": {
      "type": "string",
      "description": "Optional claim number for additional validation",
      "pattern": "^[A-Z0-9]{8,20}$"
    },
    "includeHistory": {
      "type": "boolean",
      "description": "Whether to include complete appeal history",
      "default": false
    },
    "includeAttachments": {
      "type": "boolean",
      "description": "Whether to include attachment metadata",
      "default": true
    },
    "includeCorrespondence": {
      "type": "boolean",
      "description": "Whether to include correspondence history",
      "default": false
    },
    "metadata": {
      "type": "object",
      "description": "Request metadata",
      "properties": {
        "correlationId": {
          "type": "string",
          "format": "uuid"
        },
        "requestedBy": {
          "type": "string",
          "description": "User or system requesting details"
        }
      }
    }
  }
}
