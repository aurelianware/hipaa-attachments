name: Deploy HIPAA Attachments Infrastructure

on:
  workflow_dispatch:

env:
  AZURE_RESOURCE_GROUP: hipaa-attachments-rg
  AZURE_LOCATION: eastus
  BASE_NAME: hipaa-attachments
  STORAGE_SKU: Standard_LRS

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Azure CLI
        uses: azure/cli@v2

      - name: Azure Login
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZURE_CLIENT_ID }}
          tenant-id: ${{ secrets.AZURE_TENANT_ID }}
          subscription-id: ${{ secrets.AZURE_SUBSCRIPTION_ID }}

      - name: Validate Bicep file
        run: |
          az bicep build --file infra/main.bicep --outfile /tmp/arm.json

      - name: Validate deployment (What-If)
        run: |
          az deployment group what-if \
            --resource-group $AZURE_RESOURCE_GROUP \
            --template-file infra/main.bicep \
            --parameters baseName="$BASE_NAME" storageSku="$STORAGE_SKU" location="$AZURE_LOCATION"

      - name: Deploy infrastructure
        run: |
          az deployment group create \
            --resource-group $AZURE_RESOURCE_GROUP \
            --template-file infra/main.bicep \
            --parameters baseName="$BASE_NAME" storageSku="$STORAGE_SKU" location="$AZURE_LOCATION"

      - name: Show outputs
        run: |
          az deployment group show \
            --resource-group $AZURE_RESOURCE_GROUP \
            --name $(az deployment group list --resource-group $AZURE_RESOURCE_GROUP --query "[0].name" -o tsv) \
            --query "properties.outputs" -o json